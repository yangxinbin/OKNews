<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 状态栏和标题栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- 左边箭头 -->
        <item name="drawerArrowStyle">@style/left_Drawer_Arrow_Style</item>
        <!-- 溢出菜单文字颜色-->
        <item name="textAppearanceLargePopupMenu">@style/Overflow_Menu_Text_style</item>
        <!-- 菜单项点击selector-->
        <item name="actionBarItemBackground">@drawable/abc_item_background_holo_dark</item>
        <!-- menu字体颜色-->
        <item name="android:actionMenuTextColor">@android:color/black</item>
        <!-- textColor 定义标题文字的颜色 -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    <!-- 左边的箭头指示-->
    <style name="left_Drawer_Arrow_Style" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!--溢出菜单文字样式-->
    <style name="Overflow_Menu_Text_style" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/selected</item>
    </style>
    <style name="MyTabLayoutTextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- startapp-->
    <style name="StartAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffcc00</item>
        <item name="colorPrimaryDark">#ffcc00</item>
        <!-- set Can use Activity transitions -->
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#ffcc00</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">#FFCC00</item>
    </style>

    <style name="weacher_title">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@color/weather</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="weacher_temp">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/weather</item>
    </style>

    <style name="weacher_weather">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/weather</item>
    </style>

    <style name="HD_NoActionBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="LetterIndexTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">@dimen/side_letter_bar_width</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/deep_blue</item>
    </style>
    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
